{
  "name": "tombroucke/wp-sync-posts",
  "description": "Sync external posts and products to WordPress & WooCommerce",
  "type": "library",
  "version": "1.0.0",
  "autoload": {
    "psr-4": {
      "Otomaties\\WpSyncPosts\\": "app/"
    }
  },
  "authors": [
    {
      "name": "Tom Broucke",
      "email": "tom@tombroucke.be"
    }
  ],
  "require": {
    "php": ">=8.0",
    "illuminate/support": "*",
    "league/mime-type-detection": "^1.16",
    "spatie/ray": "^1.42"
  },
  "require-dev": {
    "laravel/pint": "^1.25",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "php-stubs/woocommerce-stubs": "^10.2",
    "squizlabs/php_codesniffer": "^4.0",
    "dingo-d/wp-pest-integration-test-setup": "^1.6"
  },
  "scripts": {
    "test": [
      "phpcs --standard=PSR2 app",
      "vendor/bin/phpstan analyze app --memory-limit 1024M"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "pestphp/pest-plugin": true
    }
  }
}
